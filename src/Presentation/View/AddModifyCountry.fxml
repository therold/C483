<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Presentation.Controller.AddModifyCountryController">
    <stylesheets><URL value="@Styles.css"/></stylesheets>
    <VBox spacing="10">
        <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
        <Label fx:id="lblTitle" styleClass="title" />
        <HBox spacing="10">
            <Label fx:id="lblName" />
            <TextField fx:id="txtName" onKeyReleased="#checkCanSave"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding><Insets right="10.0" /></padding>
            <Button fx:id="btnSave" onAction="#handleSave" />
            <Button fx:id="btnCancel" onAction="#handleCancel" />
        </HBox>
    </VBox>
</AnchorPane>